@model IEnumerable<YFM.Models.ArtistBaseViewModel>

@{
    ViewBag.Title = "Index";
}
<style>
    .createBtn {
        margin-bottom: 10px;
        background-color: #edf2fb;
        border-color: #90a955;
    }
    .createBtn:hover {
        background-color: #ecf39e;
        border-color: #90a955
    }
    #createBtn {
        color: #31572c !important;
        
    }
    a:hover, a:visited, a:link, a:active {
        text-decoration: none;
    }
    .detailBtn {
        background-color: #edf2fb;
        border-color: #274c77;
    }
    .detailBtn:hover {
        background-color: #D1DDFF;
        border-color: #274c77;
    }
    #detailBtn {
        color: #012a4a !important;
    }

</style>
<h2>Artist list</h2>
<button type="button" class="btn btn-default createBtn">
    @Html.ActionLink("Create New", "Create", new { area = "" }, new { @id = "createBtn" })
</button>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UrlArtist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthOrStartDate)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Portrayal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        <img src="@(item.UrlArtist)" width="200"/>
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BirthName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BirthOrStartDate)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Genre)
    </td>

    <td>
        @Html.Raw(item.Portrayal)
    </td>
    <td>
        <button type="button" class="btn btn-default detailBtn">@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @id = "detailBtn" })</button>
    </td>
</tr>
}

</table>
