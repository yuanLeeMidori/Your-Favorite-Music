@model IEnumerable<YFM.Models.ArtistBaseViewModel>

@{
    ViewBag.Title = "Index";
}
<style>
    #createBtn {
        color: red !important
    }
</style>
<h2>Artist list</h2>

@* 1. change button color and font color (blue green tone)
   2. change ^ when hover (opposite)
   3. remove link underline*@
<button type="button" class="btn btn-outline">
    @Html.ActionLink("Create New", "Create", new { area = "" }, new { @id = "createBtn" })
</button>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UrlArtist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthOrStartDate)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Portrayal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        <img src="@(item.UrlArtist)" width="200"/>
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BirthName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BirthOrStartDate)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Genre)
    </td>

    <td>
        @Html.Raw(item.Portrayal)
    </td>
    @* 1. change button and font color to gray tone
       2. change ^ when hover (opposite)
       3. remove underline on link*@
    <td>
        <button type="button" class="btn btn-outline-secondary">@Html.ActionLink("Details", "Details", new { id = item.Id })</button>
    </td>
</tr>
}

</table>
