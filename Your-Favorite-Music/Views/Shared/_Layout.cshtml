<!DOCTYPE html>
<html>
<head>
    <!-- Do not modify below this line -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="1259e8ea-62e4-46f7-845e-9c9b32f64b0a" />
    <!-- Do not modify above this line -->

    <style>
        #navbarContainer {
            
            background-color: #293F61
        }
        .navbar-inverse .navbar-nav > li > a {
            color: #C3D7F3 !important;
        }
        .navbar-inverse .navbar-nav > li > a:hover {
            color: #f0f3fa !important;
            font-weight: bold;
        }
        #title {
            color: #C3D7F3 !important
        }
        #title:hover {
            color: #f0f3fa !important;
            font-weight: bold;
        }
    </style>
    <title>Beloved Artists</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @{
        var userAccount = new YFM.Controllers.RequestUser(User as System.Security.Claims.ClaimsPrincipal);
    }
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" id="navbarContainer">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("YFM", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @id= "title"})
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav tabs">
                    <li id="home">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Artists", "Index", "Artists")</li>
                    <li>@Html.ActionLink("Albums", "Index", "Albums")</li>
                    <li>@Html.ActionLink("Tracks", "Index", "Tracks")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy;  2020 - Yuan-Hsi Lee</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
